[core]
	repositoryformatversion = 0
	filemode = true
	bare = true
[status]
	showUntrackedFiles = no
[remote "origin"]
	url = https://github.com/Guilhermatheus/dotfiles.git
	fetch = +refs/heads/*:refs/remotes/origin/*
[push]
	autoSetupRemote = yes
[branch "main"]
	remote = origin
	merge = refs/heads/main
[alias]
	update = "!f() { pacman -Qqe > ~/dotfiles/installed-packages.md && git add -u && git commit -m \"$@\" && git push; }; f"
	files = "ls-tree -r main --name-only"
[branch "sway"]
	remote = origin
	merge = refs/heads/sway
[branch "qtilex"]
	remote = origin
	merge = refs/heads/qtilex
